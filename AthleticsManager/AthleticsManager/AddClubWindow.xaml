<Window x:Class="AthleticsManager.AddClubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AthleticsManager"
        mc:Ignorable="d"
        Title="AddClubWindow" Height="180" Width="320">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Text="Register Club" Height="60" FontWeight="ExtraBold" FontSize="22" Background="#232528" Foreground="FloralWhite" Padding="10,5" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <StackPanel >
                <TextBlock Text="Club Name:" Focusable="False" FontSize="14" Margin="10,5,0,2"/>
                <TextBox x:Name="ClubNameTextBox" Width="130" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="10,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Region:" Focusable="False" FontSize="14" Margin="10,5,0,2"/>
                <ComboBox x:Name="ClubRegionComboBox" Width="130" Height="25" HorizontalAlignment="Left" Margin="10,0,0,0">
                    <ComboBoxItem Content="Hlavní město Praha" Tag="1"/>
                    <ComboBoxItem Content="Středočeský kraj" Tag="2"/>
                    <ComboBoxItem Content="Jihočeský kraj" Tag="3"/>
                    <ComboBoxItem Content="Plzeňský kraj" Tag="4"/>
                    <ComboBoxItem Content="Karlovarský kraj" Tag="5"/>
                    <ComboBoxItem Content="Ústecký kraj" Tag="6"/>
                    <ComboBoxItem Content="Liberecký kraj" Tag="7"/>
                    <ComboBoxItem Content="Královéhradecký kraj" Tag="8"/>
                    <ComboBoxItem Content="Pardubický kraj" Tag="9"/>
                    <ComboBoxItem Content="Kraj Vysočina" Tag="10"/>
                    <ComboBoxItem Content="Jihomoravský kraj" Tag="11"/>
                    <ComboBoxItem Content="Olomoucký kraj" Tag="12"/>
                    <ComboBoxItem Content="Zlínský kraj" Tag="13"/>
                    <ComboBoxItem Content="Moravskoslezský kraj" Tag="14"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <Button Grid.Row="3" Click="Submit" Margin="10,5,20,5" Content="Submit" FontSize="20" FontWeight="DemiBold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#171738" Foreground="FloralWhite"/>

    </Grid>
</Window>
