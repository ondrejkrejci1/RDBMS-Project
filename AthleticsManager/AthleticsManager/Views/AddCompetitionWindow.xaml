<Window x:Class="AthleticsManager.Views.AddCompetitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AthleticsManager"
        mc:Ignorable="d"
        Title="Add Competition" Height="230" Width="380">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Text="Register Competition" Padding="10,5" FontWeight="ExtraBold" FontSize="22" Background="#232528" Foreground="FloralWhite" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Margin="10,5">
                    <TextBlock Text="Name:" Focusable="False" FontSize="14"/>
                    <TextBox x:Name="NameTextBox" Width="150" Height="25" MaxLength="100" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Margin="10,0">
                    <TextBlock Text="Venue:" Focusable="False" FontSize="14" />
                    <TextBox x:Name="VenueTextBox" Width="150" Height="25" MaxLength="100" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Column="1">
                <StackPanel Margin="20,5,0,5">
                    <TextBlock Text="Date:" Focusable="False" FontSize="14"/>
                    <DatePicker x:Name="DateSelector" Width="150" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="Type:" Focusable="False" FontSize="14"/>
                    <ComboBox x:Name="TypeSelect" Width="150" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Outdoor"/>
                        <ComboBoxItem Content="Indoor"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>


        </Grid>

        <Button Grid.Row="2" Click="Submit" Margin="5,5,10,5" Content="Submit" FontSize="20" FontWeight="DemiBold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#171738" Foreground="FloralWhite"/>

    </Grid>
</Window>
