<Window x:Class="AthleticsManager.Views.TopPerformancesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Top 100 Performances" Height="500" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Best stored performances" Padding="10,5" FontWeight="ExtraBold" FontSize="22" Background="#232528" Foreground="FloralWhite" />
        <Button Grid.Row="1" Click="Download" Margin="0,10,20,0" Height="40" Content="    Download    " FontSize="20" FontWeight="Bold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#4F7CAC" Foreground="FloralWhite" HorizontalAlignment="Right"/>

        <DataGrid Grid.Row="2" Name="DgTopPerf" AutoGenerateColumns="False" IsReadOnly="True" AlternatingRowBackground="LightGray" Margin="10,15,20,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Discipline" Binding="{Binding Discipline}" Width="100"/>
                <DataGridTextColumn Header="Athlete" Binding="{Binding AthleteName}" Width="*"/>
                <DataGridTextColumn Header="Performance" Binding="{Binding FormattedPerformance}" FontWeight="Bold" Width="150"/>
                <DataGridTextColumn Header="Competition" Binding="{Binding CompetitionName}" Width="150"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateString}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="3" Click="Close" Margin="10,5,20,10" Height="40" Content="Close" FontSize="20" FontWeight="Bold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#171738" Foreground="FloralWhite"/>
    </Grid>
</Window>