<Window x:Class="AthleticsManager.Views.ClubDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AthleticsManager"
        mc:Ignorable="d"
        Title="Club Details" Height="380" Width="580"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>

        <TextBlock Text="Club Details" Padding="10,5" FontWeight="ExtraBold" FontSize="22" Background="#232528" Foreground="FloralWhite" />

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Name="TxtTitle" Text="Club Name" FontSize="26" FontWeight="Bold" Foreground="#232528"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Number of Members: " FontWeight="Bold"/>
                <TextBlock Name="TxtNumberOfMembers" Text="-" Margin="0,0,20,0"/>
                <TextBlock Text="Region: " FontWeight="Bold"/>
                <TextBlock Name="TxtRegion" Text="-"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Text="List of Athletes:" Grid.Row="2" FontWeight="Bold" Margin="10,5"/>
        <DataGrid  Name="DgResults" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" Margin="10,20,10,5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <Button Grid.Row="3" Click="Close" Margin="10,5,20,10" Content="Close" FontSize="20" FontWeight="Bold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#171738" Foreground="FloralWhite"/>

    </Grid>
</Window>
