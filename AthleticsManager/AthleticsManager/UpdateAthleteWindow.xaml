<Window x:Class="AthleticsManager.UpdateAthleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AthleticsManager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Update Athlete" Height="260" Width="380">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Text="Update Athlete" Padding="10,5" FontWeight="ExtraBold" FontSize="22" Background="#232528" Foreground="FloralWhite" />
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Select Athlete:" Focusable="False" FontSize="14" Margin="10,0,5,2"/>
            <ComboBox x:Name="AthleteSelect" Width="250" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10,5">
                        <TextBlock Text="First Name:" Focusable="False" FontSize="14"/>
                        <TextBox x:Name="FirstNameTextBox" Width="125" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="0,5,0,5">
                        <TextBlock Text="Update" FontSize="12" Margin="-3,0,0,0"/>
                        <CheckBox x:Name="FirstNameUpdate" Margin="10,7"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Grid.Row="0" Margin="10,0">
                        <TextBlock Text="Last Name:" Focusable="False" FontSize="14"/>
                        <TextBox x:Name="LastNameTextBox" Width="125" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <CheckBox x:Name="LastNameUpdate" Margin="10,23"/>

                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10,5,0,5">
                        <TextBlock Text="Date of Birth:" Focusable="False" FontSize="14"/>
                        <DatePicker x:Name="DateOfBirthSelector" Width="120" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="5,5,0,5">
                        <TextBlock Text="Update" FontSize="12"/>
                        <CheckBox x:Name="DateOfBirthUpdate" Margin="13,7"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="Gender:" Focusable="False" FontSize="14"/>
                            <ComboBox x:Name="GenderSelect" Width="120" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                            </ComboBox>
                            
                        </StackPanel>

                        <CheckBox x:Name="GenderUpdate" Margin="18,23"/>

                    </StackPanel>
                    
                </StackPanel>

            </StackPanel>


        </Grid>

        <Button Grid.Row="3" Click="Confirm" Margin="5,5,10,5" Content="Submit" FontSize="20" FontWeight="DemiBold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#171738" Foreground="FloralWhite"/>
    </Grid>
</Window>
