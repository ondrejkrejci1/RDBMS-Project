<Window x:Class="AthleticsManager.AddAthleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AthleticsManager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddAthleteWindow" Height="260" Width="380">

    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Text="Register Athlete" Padding="10,5" FontWeight="ExtraBold" FontSize="22" Background="#232528" Foreground="FloralWhite" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Margin="10,5">
                    <TextBlock Text="First Name:" Focusable="False" FontSize="14"/>
                    <TextBox x:Name="FirstNameTextBox" Width="150" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Margin="10,0">
                    <TextBlock Text="Last Name:" Focusable="False" FontSize="14"/>
                    <TextBox x:Name="LastNameTextBox" Width="150" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Column="1">
                <StackPanel Margin="20,5,0,5">
                    <TextBlock Text="Date of Birth:" Focusable="False" FontSize="14"/>
                    <DatePicker x:Name="DateOfBirthSelector" Width="150" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="Gender:" Focusable="False" FontSize="14"/>
                    <ComboBox x:Name="GenderSelect" Width="150" Height="25" HorizontalAlignment="Left" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>

            
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Right">
            <TextBlock Text="Select Club: " VerticalAlignment="Center" FontSize="14"/>
            <ComboBox x:Name="ClubsComboBox" Width="130" Height="30" VerticalContentAlignment="Center">
                
            </ComboBox>
            <Button Content="  Register new Club  " Click="RegisterNewClub" BorderThickness="0" Height="30" FontWeight="Bold" Margin="20,0,0,0" Style="{StaticResource RoundButtonStyle}" Background="#4F7CAC" Foreground="FloralWhite" />
        </StackPanel>

        <Button Grid.Row="3" Click="Submit" Margin="5,5,10,5" Content="Submit" FontSize="20" FontWeight="DemiBold" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Background="#171738" Foreground="FloralWhite"/>
    </Grid>
</Window>
